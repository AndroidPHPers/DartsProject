<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_weight="0.20"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/darts" />

    <Button
        android:id="@+id/countUpMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_menu_btn_margin_top"
        android:text="@string/count_up"
        android:width="@dimen/main_menu_btn_width" />

    <Button
        android:id="@+id/zeroOneMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_menu_btn_margin_top"
        android:text="@string/zero_one"
        android:width="@dimen/main_menu_btn_width" />

    <Button
        android:id="@+id/cricketMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_menu_btn_margin_top"
        android:text="@string/cricket"
        android:width="@dimen/main_menu_btn_width" />

    <Button
        android:id="@+id/eagleEyeMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_menu_btn_margin_top"
        android:text="@string/eagle_eye"
        android:width="@dimen/main_menu_btn_width" />

</LinearLayout><!-- From: file:/Volumes/ramdisk/Documents/workspace/Android/darts/app/src/main/res/layout/activity_main.xml -->